---
import { t } from '@/lib/i18n/messages'
import { buildUrl } from '@/lib/i18n/astro'

interface Props {
  locale?: string
  currentPath?: string
}

const { locale = 'en', currentPath = '/' } = Astro.props

// Language switcher helper
function getLocalizedUrl(targetLocale: string, path: string) {
  const pathWithoutLocale = path.replace(/^\/(en|es|fr|de|ja|zh|vi)/, '') || '/'

  if (!pathWithoutLocale.startsWith('/')) {
    return targetLocale === 'en'
      ? `/${pathWithoutLocale}`
      : `/${targetLocale}/${pathWithoutLocale}`
  }

  return targetLocale === 'en'
    ? pathWithoutLocale
    : `/${targetLocale}${pathWithoutLocale}`
}

const locales = ['en', 'es', 'fr', 'de', 'ja', 'zh', 'vi']
const languageNames: Record<string, string> = {
  en: 'English',
  es: 'Español',
  fr: 'Français',
  de: 'Deutsch',
  ja: '日本語',
  zh: '中文',
  vi: 'Tiếng Việt',
}
---

<nav
  class="h-16 flex items-center justify-between px-6 border-b border-border bg-background sticky top-0 z-50"
>
  <a
    href={buildUrl('/', { locale })}
    class="text-foreground text-sm font-semibold tracking-tight hover:text-primary transition-colors"
  >
    {t('header_skills_kit', locale)}
  </a>
  <div class="flex items-center gap-6">
    <a
      href={buildUrl('/skills', { locale })}
      class="text-xs font-medium text-muted-foreground hover:text-foreground transition-colors"
    >
      {t('header_explore', locale)}
    </a>
    <a
      href={buildUrl('/skills', { locale })}
      class="text-xs font-medium text-muted-foreground hover:text-foreground transition-colors"
    >
      {t('header_trending', locale)}
    </a>
    <a
      href={buildUrl('/skills', { locale })}
      class="text-xs font-medium text-muted-foreground hover:text-foreground transition-colors"
    >
      {t('header_docs', locale)}
    </a>
    <a
      href="https://github.com/kldh/skills-kit"
      target="_blank"
      rel="noopener noreferrer"
      class="text-muted-foreground hover:text-foreground transition-colors"
      aria-label="GitHub repository"
    >
      <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
        ></path>
      </svg>
    </a>

    <!-- Language Switcher -->
    <div class="relative group">
      <button
        class="flex items-center gap-2 h-8 w-[60px] text-xs bg-transparent text-muted-foreground hover:text-accent-foreground cursor-pointer uppercase px-2 py-1.5 rounded-none border border-input hover:bg-accent transition-colors"
      >
        {locale}
        <svg
          class="size-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"
          ></path>
        </svg>
      </button>
      <div
        class="absolute right-0 mt-2 min-w-[160px] bg-popover border border-border rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all"
      >
        {
          locales.map((loc) => (
            <a
              href={getLocalizedUrl(loc, currentPath)}
              class="flex items-center justify-between w-full px-4 py-2 text-sm hover:bg-accent cursor-pointer"
            >
              <span>{languageNames[loc] || loc}</span>
              <span class="text-muted-foreground ml-2 text-[10px] uppercase">
                {loc}
              </span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</nav>
